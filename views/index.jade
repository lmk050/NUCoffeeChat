html
	head
		link(href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
		link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css")
		link(href='https://fonts.googleapis.com/css?family=Source+Sans+Pro' rel='stylesheet' type='text/css')
		link(rel="stylesheet" href="/style/index.css")
	body
		include ./includes/header.jade
		div(class="parallax-container valign-wrapper")
			div(class="parallax")
				img(src="/image/coffee-chat-third.jpg")
			div(class="row container valign" style="text-shadow: 0px 2px 5px rgba(0,0,0,.16)")
				if(!curUser)
					h3(class="center header text-orange") Real Advice from Real Industry Leaders
					//- h3(class="center header text-orange") Real Advice from
					//- h3(class="center header text-orange") Real Industry Leaders
					h5(class="center coffee-chat-grey") Networking Redefined.
					h5(class="center coffee-chat-grey") The fastest-growing network for professional millenials.
					div(class="center")
						a(class="linked-in-btn" href="/wild/oauth/auth" title="Login with LinkedIn")
				else
					h3(class="center header text-orange") Welcome to Coffee Chat!
					h5(class="center coffee-chat-grey") Networking is Redefined for You.
					h4(class="center header text-orange")=curUser.firstName
		div(class="section white")
			
		div(class="section coffee-chat-grey-background")
			div(class="row container")
				h3(class="center header") People who are on Coffee Chat
				h6(class="center") We are pround to introduce you with these awesome people! 
				h6(class="center") Scheduling is coming soon! 
				if(people)
					each person, index in people.values
						div(class="col s12 m6 l3" data-schedule-cc)
							include ./includes/card.jade
							input(type="checkbox" hidden value="off")
					from(class="col offset-m3 offset-l3 s12 m6 l12 row")
		div(id="modal" class="modal")
			div(class="modal-content")
				h4 Refer a Friend
				div(class="input-field col s12 m4 l4")
					input(type="text" id="first_name")
					label(for="first_name") First Name
				div(class="input-field col s12 m4 l4")
					input(type="text" id="last_name")
					label(for="last_name") Last Name
				div(class="input-field col s12 m4 l4")
					input(type="text" id="email")
					label(for="email") Email
				div(class="input-field col s12 m12 l12")
					textarea(class="fill")
			div(class="modal-footer")
				a(href="#!" class="btn-flat modal-close modal-action") Cancel
				a(href="#!" class="btn-flat modal-close modal-action") Send
		div(class="parallax-container valign-wrapper")
			div(class="parallax")
				img(src="/image/coffee-chat-second-text.jpg")
			div(class="row container valign")
				h4(class="center" style="text-shadow: 0px 2px 5px rgba(0,0,0,.16)") Real Advice from Real Industry Leaders
		include ./includes/partners.jade
		include ./includes/footer.jade

	script(src="https://code.jquery.com/jquery-2.2.0.min.js")
	script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js")
	script(src="/public/js/index.js")